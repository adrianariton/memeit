doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, user-scalable=no")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="icon" href="../images/logo.png")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  body
    - var optionsdate = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    link(rel='stylesheet', href='/stylesheets/index.css')
    .navbar-unfix.navbar.paddinggg
      .navbar-header.flex.hideon-sw
        a.navbar-brand(href='../').flex
          img.logoimg(src='/images/logo.png')
      .navbar-center
        a(style='font-weight: 700 !important;' href='../')
          img(src="/images/logo2.png", style="max-height: 50px !important;")
      .navbar-body
        ul.nav.navbar-nav
          if !user
            li.login(class =(title == 'Login' ? 'active' : ''))
              a(href='/users/login').flex
                i(class='material-icons') person
          else
            if user
              li.hideon-sw
                a(href='/myaccount').flex
                  i(class='material-icons') person
              //-li.flex.hideon-sw
                a(href='/scents/cart').flex
                  i(class="material-icons") shopping_cart
          li.menu
              i(class='material-icons') menu
    .customsidenav.customsidenav-unfix
      .content.container
        span Acasă
        li.home
          a(href='/') Acasă
        if !user
          li.register(class =(title == 'Register' ? 'active' : ''))
            a(href='/users/register') Înregistrează-te
          li.login(class =(title == 'Login' ? 'active' : ''))
            a(href='/users/login') Log In
         
        span Memes
        li
          a(href='/memes') See what's new!

        if user
          span Cont
          li
            a(href='/myaccount') Contul meu
          li
            a(href='/users/logout') Log Out
        
        if user
          if user.status != 'verified'
            span Verifică-ți contul!
            li
              a.verify(href='/verify') Verifică-ți contul
    .messages(style='position: absolute;')
      if true
        != messages()
      if user
        if user.status != 'verified'
          li(style='  list-style: none !important;')
            a.verify(href='/verify') Verifică-ți contul
    .fixed-action-btn
      a.btn-floating.btn-large(href='/memes')
        i.fa.fa-solid.fa-plus
    block content
    div(class="page-footer footer")
      div.container
        div.row
          div(class="col l6 s12")
            h5(class="white-text") Contactați-ne: <a href='#' style="word-wrap: break-word !important;">mail@mail.com</a>
          div(class="col l4 offset-l2 s12")
            h5 Urmăriți-ne!
            ul
              li.followus
                a(class="grey-text text-lighten-3" href="#") <i class="fa fa-instagram"></i>
                a(class="grey-text text-lighten-3" href="#") <i class="fa fa-facebook"></i>
              //-li
                a(class="grey-text text-lighten-3" href="#aboutus") About Us
              //-li
                a(class="grey-text text-lighten-3" href="#!help") Help
              li
                a( onclick='toClip()') Invită un prieten!
      input#myLinkInput(style='opacity: 0; max-width: 2px; max-height: 2px !important;' value='memeit.com')
      div.footer-copyright
        div.container © 2022 Adrian Ariton
          
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
    script(src='/javascripts/ui.js')

    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js")
    script(src='../javascripts/dot.js')